{
  "name": "Clubify",
  "manifest_version": 2,
  "version": "1.2.2",
  "description": "Transforms text references to Clubhouse stories (e.g.: 'ch<story-id>') to clickable links to Clubhouse.",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "page_action": {
    "default_icon": "icon_16.png",
    "default_title": "View Clubify settings."
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "clubify.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_page": "clubify-config.html"
}
